rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.uid == 'admin-123';
    }
    
    // ============================================
    // PUBLIC DATA COLLECTIONS
    // ============================================
    
    // Professionals Collection - Public read, owner write
    match /artifacts/{appId}/public/data/professionals/{professionalId} {
      // Allow public read access (for search functionality)
      allow read: if true;
      
      // Only the professional can write to their own document
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                             resource.data.userId == request.auth.uid;
      
      // Reviews subcollection
      match /reviews/{reviewId} {
        // Anyone can read reviews
        allow read: if true;
        
        // Only authenticated users can create reviews
        allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
        
        // Users can only update/delete their own reviews
        allow update, delete: if isAuthenticated() && 
                               resource.data.userId == request.auth.uid;
      }
    }
    
    // Users Collection - Public read, owner write
    match /artifacts/{appId}/public/data/users/{userId} {
      // Allow read for authenticated users
      allow read: if isAuthenticated();
      
      // Users can create their own document
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      
      // Users can update their own document
      // Allow update if: document has userId matching user, OR document doesn't have userId yet (for migration)
      allow update: if isAuthenticated() && (
        (resource.data.userId == request.auth.uid) ||
        (!('userId' in resource.data) && request.resource.data.userId == request.auth.uid)
      );
      
      // Users can delete their own document
      allow delete: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
    }
    
    // Bookings Collection - Participants only
    match /artifacts/{appId}/public/data/bookings/{bookingId} {
      // Allow read if user is either the customer or the professional
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        resource.data.professionalId == request.auth.uid
      );
      
      // Allow create if user is the customer
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid;
      
      // Allow update if user is either the customer or the professional
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        resource.data.professionalId == request.auth.uid
      );
      
      // Only allow delete by the customer
      allow delete: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
    }
    
    // Chats Collection - Participants only
    match /artifacts/{appId}/public/data/chats/{chatId} {
      // Allow read if user is a participant OR if document doesn't exist yet (for initial creation)
      allow read: if isAuthenticated() && (
        !exists(/databases/$(database)/documents/artifacts/$(appId)/public/data/chats/$(chatId)) ||
        request.auth.uid in resource.data.participants
      );
      
      // Allow create if user is in participants array
      allow create: if isAuthenticated() && 
                     request.auth.uid in request.resource.data.participants;
      
      // Allow update if user is a participant OR if document doesn't exist yet (for initial creation)
      allow update: if isAuthenticated() && (
        !exists(/databases/$(database)/documents/artifacts/$(appId)/public/data/chats/$(chatId)) ||
        request.auth.uid in resource.data.participants
      );
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read if user is a chat participant
        allow read: if isAuthenticated() && 
                     (request.auth.uid in get(/databases/$(database)/documents/artifacts/$(appId)/public/data/chats/$(chatId)).data.participants ||
                      // Fallback: allow if chat doesn't exist yet (for initial creation)
                      !exists(/databases/$(database)/documents/artifacts/$(appId)/public/data/chats/$(chatId)));
        
        // Allow create if user is a chat participant and senderId matches
        allow create: if isAuthenticated() && 
                       request.resource.data.senderId == request.auth.uid &&
                       (request.auth.uid in get(/databases/$(database)/documents/artifacts/$(appId)/public/data/chats/$(chatId)).data.participants ||
                        // Fallback: allow if chat doesn't exist yet (will be created with user as participant)
                        !exists(/databases/$(database)/documents/artifacts/$(appId)/public/data/chats/$(chatId)));
      }
    }
    
    // Services Collection - Public read only
    match /artifacts/{appId}/public/data/services/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Referrals Collection - Referrer and referred user access
    match /artifacts/{appId}/public/data/referrals/{referralId} {
      // Allow read if user is the referrer or the referred user
      allow read: if isAuthenticated() && (
        resource.data.referrerId == request.auth.uid ||
        resource.data.referredUserId == request.auth.uid
      );
      
      // Allow create when processing a referral (user must be the referred user)
      allow create: if isAuthenticated() && 
                     request.resource.data.referredUserId == request.auth.uid;
      
      // Allow update if user is the referrer (for reward status updates)
      // Note: In production, this should be done server-side
      allow update: if isAuthenticated() && 
                     resource.data.referrerId == request.auth.uid;
      
      // Users cannot delete referrals
      allow delete: if false;
    }
    
    // Professional Packages - Public read, owner write
    match /artifacts/{appId}/public/data/professionals/{professionalId}/packages/{packageId} {
      // Allow public read access
      allow read: if true;
      
      // Only the professional can write to their own packages
      allow create, update, delete: if isAuthenticated() && 
                                     professionalId == request.auth.uid;
    }
    
    // Professional Portfolio - Public read, owner write
    match /artifacts/{appId}/public/data/professionals/{professionalId}/portfolio/{portfolioId} {
      // Allow public read access
      allow read: if true;
      
      // Only the professional can write to their own portfolio
      allow create, update, delete: if isAuthenticated() && 
                                      professionalId == request.auth.uid;
    }
    
    // Disputes Collection - Participants and admin access
    match /artifacts/{appId}/public/data/disputes/{disputeId} {
      // Allow read if user is the customer, professional, or admin
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        resource.data.professionalId == request.auth.uid ||
        request.auth.uid == 'SdPQVpbeqGUq7F78FBcZ72MZV2I2' // Admin user ID
      );
      
      // Allow create if user is the customer or professional involved in the booking
      allow create: if isAuthenticated() && (
        request.resource.data.filedBy == request.auth.uid &&
        (request.resource.data.userId == request.auth.uid ||
         request.resource.data.professionalId == request.auth.uid)
      );
      
      // Allow update only by admin (for status changes and resolution)
      allow update: if isAuthenticated() && 
                     request.auth.uid == 'SdPQVpbeqGUq7F78FBcZ72MZV2I2'; // Admin user ID
      
      // Disputes cannot be deleted
      allow delete: if false;
    }
    
    // ============================================
    // PRIVATE USER COLLECTIONS
    // ============================================
    
    // User Documents - Owner read/write, authenticated users can read for referral lookup
    match /artifacts/{appId}/users/{userId} {
      // Users can always read their own document
      // Authenticated users can read other users' documents (needed for referral code lookup)
      // Note: This allows reading the entire document, but referral codes are meant to be shareable
      // In production, consider creating a separate public collection for referral code lookups
      allow read: if isOwner(userId) || isAuthenticated();
      
      // Users can create/update their own document
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      
      // Users cannot delete their own document (for data retention)
      allow delete: if false;
    }
    
    // User Notifications - Owner only
    match /artifacts/{appId}/users/{userId}/notifications/{notificationId} {
      // Only the user can read their own notifications
      allow read: if isOwner(userId);
      
      // Users can mark notifications as read, but cannot create/delete
      allow update: if isOwner(userId) && 
                     // Only allow updating the 'read' field
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read']);
      
      // Allow create for server-side functions (in production, this would be restricted)
      allow create: if isAuthenticated();
      
      // Users cannot delete notifications
      allow delete: if false;
    }
    
    // ============================================
    // ADMIN ACCESS
    // ============================================
    
    // Admin can read/write any collection
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
